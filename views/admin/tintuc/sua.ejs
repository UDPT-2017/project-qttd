<!DOCTYPE html>
<html lang="en">
<% include ../partials/head %>
<body>

<!--Header-part-->
<% include ../partials/header %>
<div id="content">
  <div id="content-header">
    <div id="breadcrumb"> <a href="../../admin_asset/index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Trang chủ</a> <a href="../../admin_asset/#" class="current">Thêm bài mới</a> </div>
    
  </div>
<div class="container-fluid">
  <hr>
  <% if(err != "" && err != undefined){ %>
    <div class="alert alert-danger"><strong>Lỗi! </strong><%= err %></div>
  <% } %>
  <% if(success != "" && success != undefined){ %>
    <div class="alert alert-success"><strong>Thành công! </strong><%= success %></div>
  <% } %>
  <div class="row-fluid">
    <div class="span12">
      <div class="widget-box">
        <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
          <h5>BÀI VIẾT MỚI</h5>
        </div>
        <div class="widget-content nopadding">
          <form action="../../admin/tintuc/<%= TinTuc.id %>" method="post" class="form-horizontal">
            <div class="control-group">
              <p class="control-label" style="font-size: 20px">Tiêu đề :</p>
              <div class="controls">
                <input type="text" class="span11" name="name" value="<%= TinTuc.name %>" placeholder="Tên bài viết" />
              </div>
            </div>
            <div class="control-group">
              <p class="control-label" style="font-size: 20px">Tóm tắt :</p>
              <div class="controls">
                <textarea class="span11" name="summmary"><%= TinTuc.summmary %></textarea>
              </div>
            </div>
           <div class="control-group">
              <p class="control-label" style="font-size: 20px">Ảnh đại diện :</p>
              <div class="controls">
                <input type="file" name="image"/>
              </div>
            </div>
            <div class="control-group">
              <p class="control-label" style="font-size: 20px">Thể loại :</p>
              <div class="controls">
                <select multiple name="loaitin">
                <% LoaiTins.forEach(LoaiTin => { %>
                  <option value="<%= LoaiTin.id %>" 
                  <% if(LoaiTin.id == TinTuc.LoaiTin.id){ %>
                    selected
                  <% } %>
                  ><%= LoaiTin.name %></option>
                <% }) %>  
                </select>
              </div>
            </div>
            <div class="control-group">
              <p class="control-label" style="font-size: 20px">Nội dung :</p>
              <div class="widget-content">
        <div class="control-group">
          <form>
            <div class="controls">
              <textarea class="textarea_editor span11" name="substance" rows="6" placeholder="Enter text ..."><%= TinTuc.substance %></textarea>
            </div>
          </form>
          <div class="form-actions">
              <button style="margin-left: 900px " class="btn btn-success" >Đăng bài</button>
            </div>
        </div>
      </div>
            </div>
            
            
          </form>
        </div>
      </div>
      
    </div>
    </div>
    </div>
    </div>

<% include ../partials/footer %>