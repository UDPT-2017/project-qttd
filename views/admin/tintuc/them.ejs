              </div>
            </div>
           <div class="control-group">
              <p class="control-label" style="font-size: 20px">Ảnh đại diện :</p>
              <div class="controls">
                <input type="file" name="image"/>
              </div>
            </div>
            <div class="control-group">
              <p class="control-label" style="font-size: 20px">Giá :</p>
              <div class="controls">
                <input type="text" class="span11" name="price" placeholder="" />
              </div>
            </div>
            <div class="control-group">
              <p class="control-label" style="font-size: 20px">Loại Tin :</p>
              <div class="controls">
                <select multiple name="loaitin" id="LoaiTin">
                <% LoaiTins.forEach(LoaiTin => { %>
                  <option value="<%= LoaiTin.id %>"><%= LoaiTin.name %></option>
                <% }) %>  
                </select>
              </div>
            </div>
            <div class="control-group">
              <p class="control-label" style="font-size: 20px">Nội dung :</p>
              <div class="widget-content">
        <div class="control-group">
